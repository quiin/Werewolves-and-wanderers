<!doctype html>

<html lang="en">
<head>
  <meta charset="utf-8">
  <title>W & W</title>  
  <!-- Styles -->
  <link rel="stylesheet" type="text/css" href="css/bootstrap.css">  
  <link rel="stylesheet" type="text/css" href="css/console.css">
</head>
<body>    
  <nav role="navigation" class="navbar navbar-default navbar-fixed-top">        
    <div class="navbar-header">
      <button type="button" data-target="#navbarCollapse" data-toggle="collapse" class="navbar-toggle">
          <span class="sr-only">Toggle navigation</span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
          <span class="icon-bar"></span>
      </button>
      <a href="/" class="navbar-brand">              
        Werewolves & Wanderers
        <span><img src="img/wanderer.png" width="30" height="30" /></span>
      </a>
    </div>
    <!-- Collection of nav links and other content for toggling -->
    <div id="navbarCollapse" class="collapse navbar-collapse">
      <ul class="nav navbar-nav">                
          <li><a href="#">Contribute</a></li>
          <li><a href="#">About</a></li>
      </ul>            
    </div>
  </nav>
  
  <div class="row row-console">
    <div id = 'console-output' class="col-md-offset-4 col-md-4">
      <p> <%= current_section.description %> </p>
    </div>
    <div class="col-md-offset-4 col-md-4 console-inpt">
      <form id= 'console-input' action="/">        
        <input id = 'input-command' type="text" name="command" placeholder="Type here">        
        <!-- Hidden button -->
        <input id='input-submit' type = "submit" value = "Submit">
      </form>
    </div>
  </div>
  <div class="row row-details">    
    <div class="stats col-md-offset-4 col-md-4">
      <h2> Stats</h2>
      <p id = 'health'> <strong>Health:</strong> <%= player.health %> </p>
      <p id = 'gold'> <strong>Gold:</strong> <%= player.wealth %> </p>
      <p id = 'monster_tally'> <strong>Monsters killed:</strong> <%= player.monster_tally %> </p>
    </div>    
  </div>

  <!-- jQuery -->
  <script src="js/jquery-1.12.3.js"></script> 
  <script src="js/bootstrap.min.js"></script>
  <script src="js/handlePost.js"></script>  
</body>


</html>